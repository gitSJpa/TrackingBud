{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@react-native-async-storage/async-storage": [
        "node_modules/@react-native-async-storage/async-storage"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "app/firebase.js",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
